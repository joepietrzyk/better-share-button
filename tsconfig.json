{
  "compilerOptions": {
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["firefox-webext-browser", "vitest/globals"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules", "test", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
