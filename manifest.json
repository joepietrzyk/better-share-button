{
  "manifest_version": 2,
  "name": "Better Share Button",
  "homepage_url": "https://github.com/joepietrzyk/better-share-button",
  "repository_url": "https://github.com/joepietrzyk/better-share-button",
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["reddit.bundle.js"]
    },
    {
      "matches": ["*://*.x.com/*", "*://*.twitter.com/*"],
      "js": ["x.bundle.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["storage"],
  "browser_action": {
    "default_icon": "assets/circular-icon.svg",
    "default_popup": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "better-share-button@github.com"
    }
  }
}
