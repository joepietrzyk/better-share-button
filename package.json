{
  "name": "better-share-button",
  "version": "0.9.0",
  "license": "MIT",
  "description": "Improves the share button on Reddit and X to be friendly with Discord embedding",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "watch": "webpack --watch --mode development",
    "start:firefox": "web-ext run --source-dir ./dist",
    "lint": "eslint",
    "format": "prettier --write .",
    "build": "webpack --mode production && web-ext build --overwrite-dest -s ./dist --artifacts-dir ./output",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:automation": "jest --selectProjects automation",
    "test:coverage": "jest --color --coverage --selectProjects unit",
    "test:watch": "jest --watch",
    "format-workflow": "prettier --write .github/workflows/**/* --ignore-path /dev/null",
    "clean": "rm -rf output dist"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@eslint/js": "^9.10.0",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/jest": "^29.5.13",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.7.4",
    "@types/selenium-webdriver": "^4.1.26",
    "@types/toastify-js": "^1.12.3",
    "babel-jest": "^29.7.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "dotenv": "^16.4.5",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^50.2.3",
    "eslint-plugin-no-unsanitized": "^4.1.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "selenium-webdriver": "^4.25.0",
    "style-loader": "^4.0.0",
    "svg-inline-loader": "^0.8.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.6.0",
    "web-ext": "^8.3.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-extension-manifest-plugin": "^0.8.0"
  },
  "private": true
}
